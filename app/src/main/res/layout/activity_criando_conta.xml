<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:orientation="vertical"
    tools:context=".CriandoConta">

    <ImageView
        android:id="@+id/imgPerfil"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/circulo"
        android:src="@drawable/perfil" />

    <TableLayout
        android:id="@+id/layoutTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgPerfil"
        android:layout_centerHorizontal="true"
        android:stretchColumns="2">

        <TableRow android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaalight"
                android:text="Create "
                android:textSize="45dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaabold"
                android:text="Acount"
                android:textSize="45dp" />

        </TableRow>

    </TableLayout>

    <View
        android:id="@+id/viewLinha"
        android:layout_width="120dp"
        android:layout_height="2dp"
        android:layout_below="@id/layoutTable"
        android:layout_centerInParent="true"
        android:background="@color/purple_700" />

    <EditText
        android:id="@+id/edtYourName"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/viewLinha"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/edittext"
        android:hint="  Your name"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/edtYourEmail"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/edtYourName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext"
        android:hint="  Your e-mail"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/edtYourPassword"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/edtYourEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext"
        android:hint="  Your password"
        android:textSize="30dp" />
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ceta"
        android:background="@drawable/circulo"
        android:layout_below="@+id/edtYourPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />

</RelativeLayout>